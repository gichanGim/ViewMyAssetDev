@using ViewMyAssetDev.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "로그인";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="login-container">
    <div class="login-left"></div>
    <div class="login-right">
        <h5 class="text-center mb-4 mt-5">ViewMyAssetDev</h5>
        <div class="form-container">
        <h4 class="text-center mb-4" style="font-weight:bold">회원 로그인</h4>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="UserId" class="form-label">아이디</label>
                <input asp-for="UserId" class="form-control" placeholder="아이디" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">비밀번호</label>
                <input asp-for="Password" class="form-control" placeholder="비밀번호" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="float-end">
                <a asp-controller="Account" asp-action="VerifyPhoneNum" class="text-decoration-none">비밀번호 찾기</a>
            </div>
            <div class="form-check mb-4">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>
            <input type="submit" value="로그인" class="btn btn-outline-light w-100 p-2" />
            <p class="text-center mt-3">
                계정이 없으신가요? <a class="text-decoration-none" asp-controller="Account" asp-action="Register">회원가입</a>
            </p>
            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">뒤로가기</a>
            </div>
        </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}