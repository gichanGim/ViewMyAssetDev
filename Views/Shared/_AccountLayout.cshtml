<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ViewMyAssetDev.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gothic+A1&display=swap" rel="stylesheet">
</head>
<body>
    
    <div>
            @RenderBody()
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('sendVerificationBtn').addEventListener('click', function () {
            var phoneNum = document.getElementById('PhoneNumInput').value;

            fetch(`/Account/SendVerification?phoneNum=${encodeURIComponent(phoneNum)}`, {
                method: 'POST'
            }).then(res => res.json())
                .then(data => alert(data.message));
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
